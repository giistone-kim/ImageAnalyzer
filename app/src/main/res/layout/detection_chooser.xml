<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="@dimen/content_padding">


    <TextView
            android:id="@+id/detect_label"
            android:layout_width="200dp"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="@string/detection_label"
            android:fontFamily="@font/bmjua"

            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/detect_landmark"
            android:layout_width="200dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/bmjua"
            android:gravity="center"
            android:text="@string/detection_landmark"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/detect_face"
            android:layout_width="200dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="@string/detection_face"
            android:fontFamily="@font/bmjua"

            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/detect_logo"
            android:layout_width="200dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="@string/detection_logo"
            android:fontFamily="@font/bmjua"

            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />




    <TextView
            android:id="@+id/detect_cancel"
            android:layout_width="200dp"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="@string/cancel"
            android:fontFamily="@font/bmjua"

            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />


</LinearLayout>